<?xml version="1.0"?>
<ruleset name="CustomStandard">
    <description>Custom coding standard based on PEAR with some exclusions.</description>

    <!-- Inherit the PEAR standard -->
    <rule ref="PEAR"/>

    <!-- Exclude specific rules from the PEAR standard -->
    <rule ref="PEAR.NamingConventions.ValidVariableName.PrivateNoUnderscore">
        <severity>0</severity>
    </rule>

    <rule ref="PEAR.NamingConventions.ValidFunctionName.PrivateNoUnderscore">
        <severity>0</severity>
    </rule>

    <rule ref="Generic.Files.LineLength">
      <severity>0</severity>
    </rule>
</ruleset>
